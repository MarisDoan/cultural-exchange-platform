    <script>
        const topics = [
            "The influence of traditional music on modern genres",
            "Cultural significance of traditional dances",
            "Impact of globalization on cultural identity",
            "Cultural festivals around the world",
            "Traditional clothing and its modern adaptations",
            "Cultural heritage and preservation efforts",
            "The role of food in cultural practices",
            "Influence of ancient civilizations on contemporary culture",
            "Cultural differences in communication styles",
            "The evolution of cultural norms"
        ];

        function getRandomTopic() {
            const randomIndex = Math.floor(Math.random() * topics.length);
            return topics[randomIndex];
        }

        document.getElementById('cultural-topics').innerHTML = `<h3>Topic of the Day</h3><p>${getRandomTopic()}</p>`;
    </script>
