    <script src="script.js"></script>
    <script>
        // Script to apply random colors and fonts
        document.addEventListener('DOMContentLoaded', function() {
            const colors = ['#FF5733', '#33FF57', '#3357FF', '#FF33A5', '#33FFF0'];
            const fonts = ['Arial', 'Verdana', 'Courier New', 'Georgia', 'Times New Roman'];
            
            // Apply random color and font to each section
            document.querySelectorAll('section').forEach(section => {
                const randomColor = colors[Math.floor(Math.random() * colors.length)];
                const randomFont = fonts[Math.floor(Math.random() * fonts.length)];
                section.style.color = randomColor;
                section.style.fontFamily = randomFont;
            });
        });
    </script>
